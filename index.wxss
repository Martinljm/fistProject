/**index.wxss**/
/* 轮播图 */
.slider,.slider swiper,.slider image{
  height:330rpx;
  width:100%;
}
.index-nav{
  width: 100%;
  display: flex;
  flex-wrap: wrap;
}
.nav-item{
  width:25%;
  height:200rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column; /*img index按列排放*/
  justify-content: center; /*水平居中*/
  align-items: center;  /*垂直居中*/
  font-size: 14px;
  
}
.nav-item image{
  width:100rpx;
  height:100rpx;
}
.xi{
  display:flex;
  position: relative;
  padding:20rpx;
  border-bottom: 1rpx solid #ddd;

}
/* 当前图片 */
.xi-img{
  width: 290rpx;
  height:140rpx;
  margin-right:20rpx;
}
/* 店铺信息 */
.xi-info{
  display: flex;
  flex-direction: column;
  width:580rpx;
  line-height:1.5;
  color:#666;
  font-size:16px;
}
/* 店铺名称 */
.xi-name{
  width:380rpx;
  color:#333;
  font-size:16px; 
}
.btn1{
  position: absolute;
  top:20%;
  right:5%;
}
/* 通用功能 截取字符串添加字符串*/
.ell{
  overflow:hidden;
  white-space: nowrap;/*不允许换行*/
  text-overflow: ellipsis;/*省略号*/
}